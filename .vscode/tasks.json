{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Active File (Auto Detect)",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "if /I \"${fileExtname}\"==\".cpp\" (",
                "D:\\App\\msys64\\ucrt64\\bin\\g++.exe -fdiagnostics-color=always -g \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
                ") else (",
                "D:\\App\\msys64\\ucrt64\\bin\\gcc.exe -fdiagnostics-color=always -g \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
                ")"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "自动检测 C/C++ 文件并使用正确编译器生成同名 exe"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\App\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}